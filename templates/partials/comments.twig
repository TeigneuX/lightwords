<section class="wrapper wrapper--comments">
  <div class="container">
    <div class="respond">
      <div class="h2"><span>{{ post.get_comment_count() }}</span> comments</div>
      {{ post.comment_form() }}
    </div>
    {% if post.get_comment_count() %}
      <div class="responses">
        {% for cmt in post.comments %}
          {% include "comment.twig" with { comment:cmt } %}
        {% endfor %}
      </div>
    {% endif %}   
  </div>
</section>
