<article class="tile tile-post flex-sm-6 flex-md-4 flex-lg-3"
  onclick="window.location.href = '{{ post.link }}';"
  >

  <div class="tile__head">

    <div class="tile__hero">

      <img
          src="{{ post.thumbnail.src|resize(480) }}"
          srcset="
            {{ post.thumbnail.src|resize(768) }} 768w,
            {{ post.thumbnail.src|resize(480) }} 480w,
            {{ post.thumbnail.src|resize(220) }} 220w
          "
          sizes="
              (min-width: 1200px) 25vw,
              (min-width: 992px) 33.33vw,
              (min-width: 768px) 50vw,
              100vw
          "
          itemprop="image"
          alt="{{ post.thumbnail.alt }}" />

      <h3 class="h3 tile__title"><a href="{{ post.link }}">{{ post.title }}</a></h3>

    </div>

    {% include "metas.twig" %}

  </div>

  <div class="tile__body">

    <p>
      {{post.get_preview(20, false, '')}}
      <!-- {{ post.excerpt }} -->
    </p>

  </div>

  <div class="tile__foot">
    <a class="read-more" href="{{ post.link }}">Read more</a>
  </div>
</article>
