{% extends "base.twig" %}

{% block content %}

  <article class="post-type-{{post.post_type}}" id="post-{{post.ID}}">

    {% if post.get_thumbnail %}
      {% include "hero.twig" %}
    {% endif %}

    <section class="wrapper wrapper--article-content">
      <div class="article-content container">

        <h1 class="h1 main-title">{{ title }}</h1>

        {# native walker: % include "breadcrumb.twig" %#}
        {{ breadcrumb }}

        <div class="article-content-body">
          <p class="lead">La page demandée n'existe pas, ou a été supprimée.</p>
          <p>
            <a href="/" class="btn btn-default">Retourner à l'accueil</a>
          </p>
        </div>
      </div>
    </section>

  </article>

{% endblock %}
