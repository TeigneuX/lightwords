{% extends "base.twig" %}

{% block content %}

  <article class="index">

    <section class="wrapper wrapper--article-content">
      <div class="article-content container">

        <h1 class="h1 main-title">{{ title }}</h1>

        {# native walker: % include "breadcrumb.twig" %#}
        {{ breadcrumb }}

        <section class="posts row">

          {% for post in posts %}
            {% include "tile-post.twig" %}
          {% endfor %}

        </section>
      </div>
    </section>

  </article>

{% endblock %}
